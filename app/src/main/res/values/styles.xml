<!-- Base application theme. -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorFreeSpeechRed</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="android:background">@color/colornightrider</item>
    </style>

    <style name="AppTheme.WhiteBackground">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="NeoSOFT">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/neosoft_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/neostorebottom_pad</item>
    </style>

    <style name="EditTextWithImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/btn_radius</item>
        <item name="android:layout_marginTop">@dimen/tv_updown_pad</item>
        <item name="android:layout_marginBottom">@dimen/tv_updown_pad</item>
        <item name="android:layout_marginLeft">@dimen/tv_side_pad</item>
        <item name="android:layout_marginRight">@dimen/tv_side_pad</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:drawablePadding">@dimen/btn_radius</item>
        <item name="android:background">@drawable/square_white_border_style</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="SubmitButtoninWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/tv_side_pad</item>
        <item name="android:layout_marginRight">@dimen/tv_side_pad</item>
        <item name="android:textColor">@color/colorFreeSpeechRed</item>
        <item name="android:layout_marginTop">@dimen/submit_up_pad</item>
        <item name="android:layout_marginBottom">@dimen/submit_down_pad</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubmitButtoninWhite.Red">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RateButton">
        <item name="android:text">rate</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#bfbfbf</item>
        <item name="android:textColor">@color/colorRuby</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BuyButton">
        <item name="android:text">buy now</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorRuby</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HomepageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorRuby</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewsinAddAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorgray20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_marginTop">@dimen/tv_updown_pad</item>
    </style>

    <style name="EditTextInAddAddress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">1</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">top|left</item>
        <item name="android:paddingLeft">@dimen/add_address_edittext_leftpadding</item>
    </style>
</resources>
