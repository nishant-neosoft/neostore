<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorFreeSpeechRed</item>
    </style>

    <style name="NeoSOFT">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/neosoft_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/neostorebottom_pad</item>
    </style>

    <style name="EditTextWithImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/btn_radius</item>
        <item name="android:layout_marginTop">@dimen/tv_updown_pad</item>
        <item name="android:layout_marginBottom">@dimen/tv_updown_pad</item>
        <item name="android:layout_marginLeft">@dimen/tv_side_pad</item>
        <item name="android:layout_marginRight">@dimen/tv_side_pad</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:drawablePadding">@dimen/btn_radius</item>
        <item name="android:background">@drawable/square_white_border_style</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="SubmitButtoninWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/tv_side_pad</item>
        <item name="android:layout_marginRight">@dimen/tv_side_pad</item>
        <item name="android:textColor">@color/colorFreeSpeechRed</item>
        <item name="android:layout_marginTop">@dimen/submit_up_pad</item>
        <item name="android:layout_marginBottom">@dimen/submit_down_pad</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubmitButtoninWhite.Large">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
