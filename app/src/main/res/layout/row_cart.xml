<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_button"
                android:src="@drawable/delete_prod" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/imgCartItems"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/imgCartItems"
                android:layout_toRightOf="@+id/imgCartItems"
                android:background="@color/colorWhite"
                android:text="Stylish Modern Dinning Tables"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imgCartItems"
                android:layout_toRightOf="@+id/imgCartItems"
                android:background="@color/colorWhite"
                android:text="Aron Table Center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtType"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imgCartItems"
                android:layout_toRightOf="@+id/imgCartItems"
                android:background="@color/colorWhite"
                android:text="Qty"
                android:textColor="@color/colorgray20"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtType"
                android:layout_alignRight="@+id/txtType"
                android:layout_alignTop="@+id/txt_qty"
                android:layout_marginRight="15dp"
                android:background="@android:color/background_light"
                android:text="Price" />

            <ImageView
                android:layout_height="20dp"
                android:layout_width="15dp"
                android:src="@drawable/rupee_india"
                android:background="@color/colorWhite"
                android:layout_alignBottom="@+id/txt_price"
                android:layout_toLeftOf="@+id/txt_price"
                android:layout_toStartOf="@+id/txt_price" />
        </RelativeLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>